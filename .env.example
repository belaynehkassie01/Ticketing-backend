# backend/.env.example

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=ethio_tickets_dev
DB_TEST_NAME=ethio_tickets_test

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
HOST=0.0.0.0
NODE_ENV=development
APP_NAME="Ethiopian Ticketing Platform"
APP_VERSION=1.0.0
API_PREFIX=/api

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-key-change-in-production
BCRYPT_SALT_ROUNDS=10
ENCRYPTION_KEY=32-char-encryption-key-change-me!

# ============================================
# ETHIOPIAN SMS CONFIGURATION
# ============================================
ETHIO_TELECOM_API_KEY=your-ethio-telecom-api-key
ETHIO_TELECOM_SENDER_ID=EthioTickets
SMS_PROVIDER=ethio_telecom

# ============================================
# TELEBIRR PAYMENT CONFIGURATION
# ============================================
TELEBIRR_ENV=sandbox
TELEBIRR_SANDBOX_APP_ID=your_sandbox_app_id
TELEBIRR_SANDBOX_APP_KEY=your_sandbox_app_key
TELEBIRR_SANDBOX_PUBLIC_KEY=sandbox_public_key
TELEBIRR_SANDBOX_PRIVATE_KEY=sandbox_private_key
TELEBIRR_SANDBOX_MERCHANT_ID=sandbox_merchant_id

# Production Telebirr (uncomment when ready)
# TELEBIRR_ENV=production
# TELEBIRR_APP_ID=your_production_app_id
# TELEBIRR_APP_KEY=your_production_app_key
# TELEBIRR_PUBLIC_KEY=production_public_key
# TELEBIRR_PRIVATE_KEY=production_private_key
# TELEBIRR_MERCHANT_ID=production_merchant_id
# TELEBIRR_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# CBE BANK CONFIGURATION
# ============================================
CBE_ENV=development
CBE_DEV_ACCOUNT=1000123456789
CBE_DEV_ACCOUNT_NAME="Ethio Tickets Dev"

# Production CBE (uncomment when ready)
# CBE_ENV=production
# CBE_PROD_ACCOUNT=your_production_account
# CBE_PROD_ACCOUNT_NAME="Ethio Tickets PLC"
# CBE_API_KEY=your_cbe_api_key
# CBE_API_SECRET=your_cbe_api_secret

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alternative email providers (uncomment when needed)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@ethiotickets.com
# SENDGRID_FROM_NAME="Ethio Tickets"

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_PATH=public/uploads/
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,image/jpeg,image/png

# ============================================
# MERCHANT INFORMATION
# ============================================
MERCHANT_NAME="Ethio Tickets Platform"
MERCHANT_NAME_AM="ኢትዮ ቲኬትስ ስርአት"
MERCHANT_CONTACT="+251911223344"
MERCHANT_EMAIL="payments@ethiotickets.com"

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FORMAT=combined

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ============================================
# HEALTH CHECK
# ============================================
HEALTH_CHECK_PATH=/health
ENABLE_METRICS=true
METRICS_PATH=/metrics

# ============================================
# ETHIOPIAN TIMEZONE
# ============================================
TZ=Africa/Addis_Ababa